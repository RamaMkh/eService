using eServicesV2.Kernel.Core.Resources;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace eServicesV2.Kernel.Core.Wrappers
{
    public class ServiceResponse
    {
        public bool Succeeded { get; set; }
        public ResourcesEnum Message { get; set; }

        public ServiceResponse()
        {
        }

        public ServiceResponse(ResourcesEnum message)
        {
            Succeeded = false;
            Message = message;
        }

        //public ServiceResponse(bool succeeded)
        //{
        //    Succeeded = succeeded;
        //    Message = Succeeded ? "Operation has been completed successfully." : "Operation has been failed!";
        //}

        //public static implicit operator ServiceResponse(bool successded)
        //{
        //    return new ServiceResponse(successded);
        //}

        //public static implicit operator ServiceResponse(string message)
        //{
        //    return new ServiceResponse(message);
        //}
    }

    public class ServiceResponse<T> : ServiceResponse
    {
        public T Data { get; set; }

        public ServiceResponse() { }

        public ServiceResponse(T data, bool succeeded = true, ResourcesEnum message = ResourcesEnum.updatedSuccess)
        {
            Succeeded = succeeded;
            Message = message;
            Data = data;
        }

        public ServiceResponse(ResourcesEnum message) : base(message) { }

        //public ServiceResponse(bool succeeded) : base(succeeded) { }

        public static implicit operator ServiceResponse<T>(T data)
        {
            return new ServiceResponse<T>(data);
        }
    }


}

